<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_mypage_ranking_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/profile_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqahansansneo_light"
        android:text="오구"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/iv_mypage_ranking_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_mypage_ranking_profile"
        app:layout_constraintStart_toEndOf="@id/iv_mypage_ranking_profile"
        android:layout_marginStart="36dp"/>

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="22dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>