<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img_sub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="154:146"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_photo_moon"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="느낌있게 막춤 챌린지"
        android:textSize="16dp"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img_sub"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_sub_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37명 참여"
        android:textSize="14dp"
        android:fontFamily="@font/spoqahansansneo_light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/img_sub_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_level2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_people"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_sub_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv.2"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/img_sub_lv"
        app:layout_constraintStart_toEndOf="@id/img_sub_lv"
        app:layout_constraintBottom_toBottomOf="@id/img_sub_lv"
        android:layout_marginStart="6dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>