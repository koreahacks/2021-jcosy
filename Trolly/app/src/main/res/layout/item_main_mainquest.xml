<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_photo_moon"
        app:layout_constraintDimensionRatio="320:170"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문학소녀처럼, 독서타임"
        android:textSize="20dp"
        android:fontFamily="@font/spoqahansansneo_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:id="@+id/img_main_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_level2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_main_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv.2"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/img_main_lv"
        app:layout_constraintStart_toEndOf="@id/img_main_lv"
        app:layout_constraintBottom_toBottomOf="@id/img_main_lv"
        android:layout_marginStart="6dp"/>


    <TextView
        android:id="@+id/tv_main_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49명 참여"
        android:textSize="14dp"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>


    <ImageView
        android:id="@+id/completed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/main_completed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/ic_completed_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_success_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>