<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_history"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="히스토리"
        style="@style/content_text_title"
        app:layout_constraintStart_toStartOf="@id/tb_history"
        app:layout_constraintEnd_toEndOf="@id/tb_history"
        app:layout_constraintTop_toTopOf="@id/tb_history"
        app:layout_constraintBottom_toBottomOf="@id/tb_history"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tb_history"/>

</androidx.constraintlayout.widget.ConstraintLayout>