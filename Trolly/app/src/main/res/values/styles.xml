<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:showDividers">middle</item>
        <item name="colorPrimary">@color/black</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@android:color/white</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/white</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/red01</item>                    <!-- 하단 움직이는 바 색-->
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/white</item>
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
    </style>

    <style name="title_text_big" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo_bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="content_text_title" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">12dp</item>
    </style>

    <style name="content_text_body" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="android:lineSpacingExtra">12dp</item>
    </style>

    <style name="content_text_detail_body" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="timer_text" parent="@android:style/Widget.TextView">
        <item name="font">@font/poppins_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">26dp</item>
    </style>

    <style name="button_white_text" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_big_white_text" parent="@android:style/Widget.TextView">
        <item name="font">@font/spoqahansansneo</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>